<h1>Upcoming Classes</h1>

<div class="row">
<% if(msg) {  %>

    <%   classes.forEach(cl=>{ %>   
        <% let res = cl.starttime.split(":")[0] %>    
        <% let str = "am"; if(res >=12) { str = "pm" }%> 
        <% let res1 = cl.endtime.split(":")[0] %>    
        <% let str1 = "am"; if(res1 >=12) { str1 = "pm" }%> 
        <div class="col s12 m3">
            <div class="card pink lighten-5">
                <div class="card-content">  
                <span class="card-title activator grey-text text-darken-4"><%=cl.classdate.toDateString()%> at <%=cl.starttime+" "+str%> <i class="material-icons right">more_vert</i></span>
                <p>Class ends at: <%=cl.endtime+" "+str1%>  </p>
                <p><a href="#">This is a link</a></p>
                </div>
                <div class="card-action">   
                    <%if (user) {  %>
                        <a href="/class/registerclass/"> Register</a>
                    <% } else {%>       
                    <a href="/auth/signup"> Sign up to register</a>
                    <% } %> 
                </div>
                <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"> Class details <i class="material-icons right">close</i></span>
                <p>Class Name: <%=cl.classname %></p>
                <p>Instructor: <%=cl.instructor.firstname  %>  <%=cl.instructor.lastname%> </p>
                <p>Class Type: <%=cl.classtype  %> </p>
                <p>Location: <%=cl.location.centername %>  </p>
                </div>
            </div>
        </div>
    <% }) %> 


<% } else { %>
    <div class="col s12 m3">
        <div class="card pink lighten-5">
            <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">No Classes this week!<i class="material-icons right">more_vert</i></span>
            <p>Check after a week, we will be posting soon!</p>
            <p>You can still sign up to come back later and register for classes.</p>
            </div>
            <div class="card-action">
                <a href="/auth/signup"> Sign Up</a>
            </div>
            <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Sign up!<i class="material-icons right">close</i></span>
            <p>We have classes mornings, afternoons and evenings!</p>
            </div>
         </div>
    </div>

<% } %> 

</div>


 





   



