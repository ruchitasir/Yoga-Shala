<% if(alerts && alerts.error){ %> 
   <div class="card red lighten-3" style="margin-top: 0">
      <div class="card-content" style="padding: 10px">  
        <%alerts.error.forEach(e=>{  %>
        <p> Error: <%= e %> </p> 
        <% }) %>       
      </div>
   </div>
   <% } %> 

<% if(alerts && alerts.success){ %> 
<div class="card green lighten-3" style="margin-top: 0">
   <div class="card-content" style="padding: 10px">  
      <%alerts.success.forEach(s=>{  %>
      <p> Success: <%= s %> </p> 
      <% }) %>       
   </div>
</div>
<% } %>  